    <system:String x:Key="historyFileUpdate">Die Datei '{0}' wurde am Server '{1}' aktualisiert.</system:String>
    <system:String x:Key="historyFileDelete">Die Datei '{0}' wurde vom Server '{1}' gelöscht.</system:String>
    <system:String x:Key="historyFileAdd">Die Datei '{0}' wurde auf den Server '{1}' geladen.</system:String>
    <system:String x:Key="historyFolderUpdate">Der Ordner '{0}' wurde am Server '{1}' aktualisiert.</system:String>
