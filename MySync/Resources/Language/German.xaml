<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib" >

    <system:String x:Key="windowClose">Beenden</system:String>
    <system:String x:Key="windowMinimize">Minimieren</system:String>
    <system:String x:Key="windowMaximize">Maximieren</system:String>
    <system:String x:Key="windowRefresh">Aktualisieren</system:String>

    <system:String x:Key="close">Schließen</system:String>
    <system:String x:Key="login">Login</system:String>
    <system:String x:Key="language">Sprache</system:String>
    <system:String x:Key="german">Deutsch</system:String>
    <system:String x:Key="english">Englisch</system:String>

